{{#zone "topCss"}}
    <style>
        .thumbnail.icon:before {
            padding-top: 0;
        }

    </style>
{{/zone}}

{{#zone "device-thumbnail"}}
    <br>
    <br>
    <br>
    <br>
    <img src="{{@unit.publicUri}}/images/raspberryTempSensor.png"/>
{{/zone}}

{{#zone "device-opetations"}}
    <div style="background: #11375B; color: #fff; padding: 10px; margin-bottom: 5px">
        Operaciones
    </div>
    <div class="add-margin-top-4x">
        {{unit "cdmf.unit.device.operation-bar" device=device autoCompleteParams=autoCompleteParams
               encodedFeaturePayloads=encodedFeaturePayloads}}
    </div>
{{/zone}}

{{#zone "device-view-tabs"}}
    <li class="active"><a class="list-group-item" href="#device_statistics" role="tab"
                          data-toggle="tab" aria-controls="device_statistics">Estadísticas Del
                                                                              Dispositivo</a>
    </li>
    <li><a class="list-group-item" href="#event_log" role="tab" data-toggle="tab"
           aria-controls="event_log">Log de Operaciones</a></li>
{{! LVP: This is how to introduce a new tab at the device view
    <li><a class="list-group-item" href="#geo_dashboard" role="tab" data-toggle="tab"
		aria-controls="geo_dashboard">Map</a></li>}}
{{/zone}}

{{#zone "device-view-tab-contents"}}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <div class="panel panel-default tab-pane active"
         id="device_statistics" role="tabpanel" aria-labelledby="device_statistics">
        <div class="panel-heading">Estadísticas Del Dispositivo</div>
        {{unit "cdmf.unit.device.type.tempsensor.realtime.analytics-view" device=device}}
    </div>
    <div class="panel panel-default tab-pane" id="event_log" role="tabpanel"
         aria-labelledby="event_log">
        <div class="panel-heading">Recargar el log de operaciones <span><a href="javascript:history.go(0)"
							   {{!<div class="panel-heading">Operations Log <span><a href="#"}}
                                                           id="refresh-operations"><i
                class="fw fw-refresh"></i></a></span></div>

        <div class="panel-body">
            <div id="operations-spinner" class="wr-advance-operations-init hidden">
                <br>

                <i class="fw fw-settings fw-spin fw-2x"></i>
                Recargando el log de operaciones . . .
                <br>
            </div>
            <div id="operations-log-container">
                <div class="panel-body">
		{{#each data}}
		<tr>
			---------------------------------------------------------------------------------
			<br>
			<td><b><big>Operación:</big></b><i> {{name}}</i>
			</td>
			<br>
			<td><b><big>Fecha:</big></b><i> {{date}}</i></td>
			<br>
			<td><b><big>Información Adicional:</big></b><i> {{payload}}</i></td>
			<br>
		</tr>
		{{/each}}
                </div>
                <br class="c-both"/>
	    </div>

        </div>
    </div>
{{/zone}}
