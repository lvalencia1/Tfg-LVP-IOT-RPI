			       },
             {
               "type": "radio",
               "id": "cmd_custom",
               "label": "Permite mandarle comandos bash [Comando_Parametro1_Parametro2_...]",
               "name": "orden",
               "value":"bash"
             },
             {
               "type": "radio",
               "id": "cmd_shutdown",
               "label": "Apagar la Raspberry [Tiempo en Segundos]",
               "name": "orden",
               "value":"shutdown"
             }
		       ]
     	       }
       }
